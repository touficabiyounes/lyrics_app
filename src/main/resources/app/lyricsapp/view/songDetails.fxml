<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="360" prefWidth="870" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <ImageView fx:id="coverArt" fitHeight="140.0" fitWidth="140.0" layoutX="0.0" layoutY="0.0" preserveRatio="true" styleClass="coverArt">
            <image>
                <Image fx:id="coverImage" url="@defaultCover.png" />
            </image>
        </ImageView>
        <Label fx:id="songTitle" layoutX="10.0" layoutY="150.0" maxWidth="130.0" text="Title" textFill="#FFF" wrapText="true" />
        <Label fx:id="songArtist" layoutX="10.0" layoutY="180.0" lineSpacing="0" maxWidth="130.0" text="Artist" textFill="#FFF" wrapText="true" />
        <Label fx:id="songRank" layoutX="10.0" layoutY="210.0" lineSpacing="0" maxWidth="130.0" text="Rank" textFill="#FFF" wrapText="true" />

        <Label fx:id="favLabel" layoutX="10.0" layoutY="271.0" lineSpacing="0" maxWidth="146.0" prefHeight="26.0" prefWidth="134.0" text="Add / Remove" textFill="#FFF" wrapText="true" />
        <Button fx:id="favButton" layoutX="10.0" layoutY="234.0" lineSpacing="0" maxWidth="130.0" text="Add to Favorites" textFill="#FFF" wrapText="true" />
        <ComboBox fx:id="playlistBox" layoutX="9.0" layoutY="298.0" maxWidth="130.0" promptText="Playlist" />

        <Label fx:id="playlistLabelRem" layoutX="10.0" layoutY="324.0" lineSpacing="0" maxWidth="130.0" prefHeight="26.0" prefWidth="103.0" text="Removed from" textFill="#FFF" wrapText="true" />
        <Label fx:id="playlistLabelAdd" layoutX="18.0" layoutY="324.0" lineSpacing="0" maxWidth="130.0" prefHeight="26.0" prefWidth="94.0" text="Added to" textFill="WHITE" wrapText="true" />
        <TextArea fx:id="songLyrics" layoutX="150.0" layoutY="0.0" prefHeight="360.0" prefWidth="700.0" wrapText="true" styleClass="songLyrics" />
      <Label fx:id="playlistLabelName" alignment="CENTER" layoutX="17.0" layoutY="343.0" lineSpacing="0" prefHeight="22.0" prefWidth="62.0" text="" textFill="#FFF" wrapText="true" />
    </children>
    <stylesheets>
        <URL value="@songResult.css" />
    </stylesheets>

</AnchorPane>
